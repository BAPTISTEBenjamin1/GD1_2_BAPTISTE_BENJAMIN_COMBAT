int pvmaxjoueur = 40;
int atk = 12;
int atkdef = 3;
int i = 5;
int choix= 2;
int choixmonstre = 0 ;
    


//Déclaration du début de combat//
printf("==============================================\n");
printf("Un Gobelin engage le combat ! Il a %d/%d points de vie\n",pv,pvmax);
printf("==============================================\n"); 

    
        while(choix==2){

