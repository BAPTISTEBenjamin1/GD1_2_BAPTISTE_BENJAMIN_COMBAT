                        pv=pv-atkdef;
                        
                        printf("Le monstre se protège, il subit moins de degats\n",pv,pvmax);
                    }    

            choix=choix+1;

                    if(pv<=0){

                        printf("==========================================================================\n");   
                        printf("Bravo, le Gobelin est mort\n");break;
                    
                    
                            }

